{% extends 'GradeWebBundle::template.html.twig' %}

{% block content_content -%}
    <h1>Grade</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ entity.value }}</td>
            </tr>
            <tr>
                <th>Guid</th>
                <td>{{ entity.guid }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('grade') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('grade_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
